<?php

/**
 * @file
 * stanford_news.module
 */

/**
 * Implements hook_theme().
 */
function stanford_news_theme() {
  return [
    'node__stanford_news__full' => [
      'template' => 'node--stanford-news',
      'base hook' => 'node'
    ],
    'field__node__su_news_topics' => [
      'template' => 'field--node--su-news-topics',
      'base hook' => 'field'
    ],
  ];
}

/**
 * Implements hook_preprocess_block().
 */
function stanford_news_preprocess_block(&$variables) {
  if (!empty($variables['elements']['#id'])) {
    if ($variables['elements']['#id'] == 'newslettersignup') {
      $variables['#attached']['library'][] = 'stanford_news/newsletter_signup';
    }
  }
}

/**
 * Implements hook_preprocess_node().
 */
function stanford_news_preprocess_node(&$variables) {
  $node = $variables['node'];
  //check content type
  if ($node->getType() == 'stanford_news') {
    $variables['#attached']['library'][] = 'stanford_news/news_node';
  }
}
